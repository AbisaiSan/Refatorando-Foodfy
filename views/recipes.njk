{% extends "layout.njk" %}

  {%block head%}
  <title>Receitas</title>
  {%endblock%}
  
  {%block content%}
    <section id="cards">
      {%for item in items%}
      <div class="card" id="{{loop.index0}}">
          <img src="{{item.image}}" alt="">
          <div class="nome-prato">
            <h2 class="nome-prato" >{{item.title}}</h2>
          </div>
          <div class="chef">
            <h3 class="chef" >{{item.author}}</h3>
          </div>
      </div>
      {%endfor%}
    </section>

    <script src="/js/receitas.js"></script>
{%endblock%}
